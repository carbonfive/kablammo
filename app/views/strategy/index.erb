<h1>
  Leaderboard
  <a href="<%= url('/strategies/new') %>" class="btn btn-primary pull-right">Enter Your Robot</a>
</h1>


<table class="table leaderboard">
  <tbody>
    <% strategies.each_with_index do |strategy, i| %>
      <tr>
        <td>
          <%= i + 1 %>.
          <a href="/strategies/<%= strategy.id %>">
            <img class="gravatar" src="<%= strategy.gravatar %>">
            <%= strategy.username %>
          </a>
        </td>
        <td>
          <%= scoreboard[strategy.username].nil? ? 'N/A' : scoreboard[strategy.username] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>