<h1>
  Leaderboard
  <a href="<%= url('/strategies/new') %>" class="btn btn-primary pull-right">Add Your Robot</a>
</h1>


<table class="table leaderboard">
  <tbody>
    <% strategies.each_with_index do |strategy, i| %>
      <tr>
        <td>
          <%= i + 1 %>.
        </td>
        <td>
          <a href="/strategies/<%= strategy.id %>"><img class="gravatar" src="<%= strategy.gravatar rescue nil %>"></a>
          <a href="/strategies/<%= strategy.id %>"><%= strategy.visible_name %></a>
        </td>
        <td>
          <%= scoreboard[strategy.id].nil? ? 'N/A' : scoreboard[strategy.id] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
