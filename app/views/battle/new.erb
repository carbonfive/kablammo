<h1>Enter the Arena</h1>

<form method="post" action="<%= url('/battles') %>">
  <div class="form-group">
    <label for="player1">Robot 1</label>
    <select name="player1" id="player1" class="form-control">
      <option value="dhendee" selected="selected">dhendee</option>
      <% strategies.each do |s| %>
        <option value="<%= s.id %>"><%= s.username %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label for="player2">Robot 2</label>
    <select name="player2" id="player2" class="form-control">
      <option value="mwynholds" selected="selected">mwynholds</option>
      <% strategies.each do |s| %>
        <option value="<%= s.id %>"><%= s.username %></option>
      <% end %>
    </select>
  </div>
  <p>
    <button type="submit" class="btn btn-primary">Fight!</button>
  </p>
</form>
